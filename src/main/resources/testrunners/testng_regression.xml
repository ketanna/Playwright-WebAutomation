<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OpenCartTest-RegressionPWSuite" thread-count="5" parallel="tests">

    <listeners>
        <listener class-name="com.qa.opencart.util.ExtentReportListener"/>
    </listeners>


    <test name="Open Cart Login Page Test_chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test>

    <test name="Open Cart Home Page Test_firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.opencart.tests.HomePageTest"/>
        </classes>
    </test>

    <test name="Open Cart Login Page Test_chrome1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test>

    <test name="Open Cart Home Page Test_firefox1">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.qa.opencart.tests.HomePageTest"/>
        </classes>
    </test>

    <test name="Open Cart Login Page Test_chromium">
        <parameter name="browser" value="chromium"/>
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test>

</suite>